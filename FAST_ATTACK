-- G·ª≠i th√¥ng b√°o khi v√†o game
pcall(function()
    game.StarterGui:SetCore("SendNotification", {
        Title = "‚ö°FAST ATTACKüëä",
        Text = "Fast attack will automatically turn on when you play Blox Fruit.",
        Duration = 5,
        Icon = "rbxthumb://type=Asset&id=91623223092520&w=150&h=150",
    })
end)

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local Net = ReplicatedStorage:WaitForChild("Modules"):WaitForChild("Net")
local EnemiesFolder = workspace:WaitForChild("Enemies")
local LocalPlayer = Players.LocalPlayer

-- T·∫•n c√¥ng t·∫•t c·∫£ qu√°i xung quanh
task.spawn(function()
    while task.wait(0.001) do
        local foundEnemy = false
        for _, enemy in pairs(EnemiesFolder:GetChildren()) do
            local part = enemy:FindFirstChild("UpperTorso")
            if part and enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 then
                Net:WaitForChild("RE/RegisterHit"):FireServer(part, {}, "3269aee8") -- Token cho NPC
                foundEnemy = true
            end
        end

        -- N·∫øu kh√¥ng c√≥ qu√°i n√†o th√¨ m·ªõi ƒë√°nh ng∆∞·ªùi ch∆°i
        if not foundEnemy then
            for _, player in pairs(Players:GetPlayers()) do
                if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Head") then
                    local args = {
                        [1] = player.Character.Head,
                        [2] = {},
                        [4] = "326880d6" -- Token cho ng∆∞·ªùi ch∆°i
                    }
                    Net:WaitForChild("RE/RegisterHit"):FireServer(unpack(args))
                end
            end
        end
    end
end)
